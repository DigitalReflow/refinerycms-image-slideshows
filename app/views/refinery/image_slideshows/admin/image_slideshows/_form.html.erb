<%= form_for [refinery, :image_slideshows_admin, @image_slideshow] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @image_slideshow,
              :include_object_name => true %>

  <div class="field">
    <%= f.label :client -%>
    <%= f.select(:client_id, @clients.collect {|c| [c.name, c.id] }, prompt: true)%>
  </div>

  <div class="field">
    <%= f.label :page -%>
    <%= f.select(:page_id, @pages.collect {|p| [p.title, p.id] }, prompt: true)%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.image_slideshows.admin.image_slideshows.image_slideshow'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @image_slideshow.title) %>
<% end -%>
